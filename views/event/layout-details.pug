extends ../layout

append styles
  link(rel="stylesheet", type="text/css", href="/styles/event/event.css")

block main
  h1.title: block title

  div.flex
    aside
      section.venue
        block venue
          h2 Venue

      section.schedule
        block schedule
          h2 Schedule
          .start
            time
              span.moy: block moy
              span.dom: block dom
            .details
              .time: block time
              .duration: block duration


      section.links
        block tickets
          h2 Tickets

    div.info
      block info
