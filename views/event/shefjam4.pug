html
  head
    title ShefJam 4

    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, user-scalable=no')

    link(rel='stylesheet' href='/styles/shefjam4/main.css')
    //[if lte IE 8]
      link(rel='stylesheet' href='/styles/shefjam4/ie8.css')
