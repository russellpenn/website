include mixins

doctype 5
html(lang="en")
  head
    title Sheffield CompSoc

    meta(charset="UTF-8")
    meta(name="referrer" content="origin-when-cross-origin")
    meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")

    //- search
    meta(name="description" content="Sheffield CompSoc")
    meta(name="keywords" content="University, Sheffield, Computer, Science, Society, CompSoc")
    meta(name="author" content="University of Sheffield Computer Science Society")

    //- icon metadata
    meta(name="apple-mobile-web-app-title", content="CompSoc")
    meta(name="application-name", content="CompSoc")
    meta(name="theme-color", content="#70b62c")
    link(rel="manifest", href="/files/manifest.json")
    link(rel="mask-icon", href="/images/safari-pinned-tab.svg", color="#70b62c")

    //- icons
    link(rel="apple-touch-icon", sizes="180x180", href="/images/apple-touch-icon.png")
    link(rel="icon", type="image/png", href="/images/favicon-32x32.png", sizes="32x32")
    link(rel="icon", type="image/png", href="/images/favicon-16x16.png", sizes="16x16")

    block styles
      link(rel="stylesheet" type="text/css" href="/styles/style.css")

    block scripts
      script(src="/scripts/stickyfill.js")
      script(src="/scripts/nav.js")

  body
    include components/header

    main
      div.content
        block main

    include components/footer
