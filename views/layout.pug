include mixins

doctype 5
html(lang="en")
  head
    title Sheffield CompSoc

    meta(charset="UTF-8")
    meta(name="referrer" content="origin-when-cross-origin")
    meta(name="description" content="Sheffield CompSoc")
    meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
    meta(name="keywords" content="University, Sheffield, Computer, Science, Society, CompSoc")
    meta(name="author" content="University of Sheffield Computer Science Society")

    link(rel="icon" href="/favicon.ico")

    block styles
      link(rel="stylesheet" type="text/css" href="/styles/style.css")

    block scripts
      script(src="/scripts/stickyfill.js")
      script(src="/scripts/nav.js")

  body
    include components/header

    main
      div.content
        block main

    include components/footer
