extends _layout

append styles
  link(rel="stylesheet" href="/styles/signup.css")

block main
  h1.title Mailing list

  p.
    Want us to keep you up-to-date with our lastest events via email? #[br]
    Sign up here!

  div#mc_embed_signup
    form#mc-embedded-subscribe-form.validate(action='https://shefcompsoc.us13.list-manage.com/subscribe/post?u=14bf09c8b2e4413d77681209a&id=7fd4faa462' method='post' name='mc-embedded-subscribe-form' target='_blank' novalidate='')
      #mc_embed_signup_scroll
        .indicates-required #[span.asterisk *] indicates required

        .mc-field-group
          label(for='mce-EMAIL') Email Address #[span.asterisk *]
          input#mce-EMAIL.required.email(type='email' value='' name='EMAIL' placeholder="a.turing@sheffield.ac.uk")

        .mc-field-group
          label(for='mce-FNAME') First Name #[span.asterisk *]
          input#mce-FNAME.required(type='text' value='' name='FNAME' placeholder="Alan")

        .mc-field-group
          label(for='mce-LNAME') Last Name
          input#mce-LNAME(type='text' value='' name='LNAME' placeholder="Turing")

        .mc-field-group
          label(for='mce-YEARGROUP') Year Group #[span.asterisk *]
          select#mce-YEARGROUP.required(name='YEARGROUP')
            option(value='' selected)
            option(value='Foundation Year') Foundation Year
            option(value='First Year') First Year
            option(value='Second Year') Second Year
            option(value='Third Year') Third Year
            option(value='Fourth Year') Fourth Year
            option(value='Postgraduate') Postgraduate
            option(value='Staff') Staff

        #mce-responses.clear
          #mce-error-response.response(style='display:none')
          #mce-success-response.response(style='display:none')

        // real people should not fill this in and expect good things
        // do not remove this or risk form bot signups
        div(style='position: absolute; left: -9999px;' aria-hidden='true')
          input(type='text' name='b_14bf09c8b2e4413d77681209a_7fd4faa462' tabindex='-1' value='')

        div
          input#mc-embedded-subscribe.button(type='submit' value='Subscribe' name='subscribe')

        .clear

  script(type='text/javascript' src='//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js')
  script(type='text/javascript').
    (function($) {window.fnames = new Array(); window.ftypes = new Array();fnames[0]='EMAIL';ftypes[0]='email';fnames[1]='FNAME';ftypes[1]='text';fnames[2]='LNAME';ftypes[2]='text';fnames[3]='YEARGROUP';ftypes[3]='dropdown';}(jQuery));var $mcj = jQuery.noConflict(true);
